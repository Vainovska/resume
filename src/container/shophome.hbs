<main class="m-2 p-1">
    <div class="row">
        <div class="col-12 mx-0 pe-0">
            <div class="card">
                <ul class="nav">
                    {{#each navigation.links}}
                    <li class="nav-item">
                        <a href="{{href}}" class="nav-link">{{text}}</a>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col-12 card">
            {{#with newsBlock}}
            <h2 class="text-center">{{title}}</h2>
            <div class="row">
                <ol>
                    {{#each cards}}
                    <li class="col-3">
                        <div class="card text-bg-dark pe-2 mb-2">
                            <div class="card-item">
                                <div class="card-header">
                                    {{title}}
                                    <div>
                                        {{#if isTop}}
                                        <span class="badge text-bg-danger rounded-pill">Top</span>
                                        {{/if}}
                                        {{#if isNew}}
                                        <span class="badge text-bg-success rounded-pill">New</span>
                                        {{/if}}
                                    </div>
                                </div>
                                <div class="card-body">
                                    <p>{{description}}</p>
                                </div>
                            </div>
                        </div>
                    </li>
                    {{/each}}
                </ol>
            </div>
            {{/with}}
        </div>
        <div>
            {{#with goodsBlock}}
            <div class="nav nav-tabs p-1">
                {{#each tabs}}
                <div class="nav-item">
                    {{#if isActive}}
                    <a class="nav-link active">{{text}}</a>
                    {{#if isDisabled}}
                    <a class="nav-link disabled">{{text}}</a>
                    {{/if}}
                    {{else}}
                    <a class="nav-link">{{text}}</a>
                    {{/if}}
                </div>
                {{/each}}
            </div>
            <div class="row">
                <ul class="col-12 card">
                    {{#each cards}}
                    <li class="col-3">
                        <div class="card-item">
                            <img class="card-img-top" src="{{image}}">
                            <div class="card-body">
                                <div class="card-title">
                                    <h6>{{title}}</h6>
                                    <div>
                                        {{#if isHot}}
                                        <span class="badge text-bg-warning text-uppercase rounded-pill">Hot!</span>
                                        {{/if}}
                                        {{#if isNew}}
                                        <span class="badge text-bg-primary rounded-pill">New</span>
                                        {{/if}}
                                    </div>
                                </div>
                                <p>{{description}}</p>
                            </div>
                        </div>
                    </li>
                    {{/each}}
                </ul>

            </div>
            {{/with}}
        </div>
        <div class="p-0 card">
            {{#with subscribe}}
            <div class="p-2 card-item text-bg-dark">
                <h2>{{header}}</h2>
                <p>{{description}}</p>
                <div class="row">
                    {{#each buttons}}
                    <div class="col-12 mb-2">
                        <button class="btn btn-primary" href="{{link}}">{{text}}</button>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/with}}
        </div>
        <div class="card p-0">
            {{#with service}}
            <div class="mx-0 p-1 card-item text-bg-success text-center">
                <h2>{{title}}</h2>
                <p>{{description}}</p>
                <div class="my-2">
                    {{#each buttons}}
                    <button class="btn btn-primary" href="{{link}}">{{text}}</button>
                    {{/each}}
                </div>
            </div>
            {{/with}}
        </div>
        <div class="m-2 ps-3">
            <div class="row">
                {{#each footer}}
                <ul class="nav col-12">
                    {{#each this}}
                    <li class="col-3 g-5">
                        <a href="{{link}}">{{text}}</a>
                    </li>
                    {{/each}}
                </ul>
                {{/each}}
            </div>
        </div>
    </div>
</main>